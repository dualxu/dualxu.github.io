# Post Settings
excerpt_separator: ---
paginate: 16
per_page: 16
paginate_path: "/blog/page:num/"
collections:
  articles:
    output: true
defaults:
  - scope:
      path: "_posts"
      type: "posts"
    values:
      layout: "post"
      author: "dualxu"
      permalink: "/post/:title.html"
  - scope:
      path: "_articles"
      type: "articles"
    values:
      layout: "post"
      author: "dualxu"
      permalink: "/article/:title.html"

# Plugins
